{profiles, [
            {test, [
                    {deps, [{erlexec, {git, "https://github.com/saleyn/erlexec.git", {ref, "576fb5d"}}}
                           ]},
                    {eunit_opts             , [verbose]},
                    {ct_opts, [ {
                                 sys_config, ["test/config/test.config"]}]},
                    {cover_enabled          , true},
                    {cover_print_enabled    , true},
                    {cover_export_enabled   , true},
                    {coveralls_coverdata    , "_build/test/cover/ct.coverdata"},
                    {coveralls_service_name , "travis-ci"},
                    {plugins                , [coveralls]}
                   ]},
            {travis, [
                      {ct_opts, [ {
                                   sys_config, ["test/config/travis-test.config"]}]}
                     ]},
            {lint, [
                    {plugins, [rebar3_lint]}
                   ]}
           ]}.
{plugins, [rebar3_fmt]}.
{dialyzer,
 [
  {plt_location, "_build/plt"}
 ]}.
